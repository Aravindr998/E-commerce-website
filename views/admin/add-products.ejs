<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %> 
<body class="pt-5">
  <%- include('../partials/admin/admin-navbar') %> 
  <section class="container p-4">
    <p class="text-danger">Error message</p>
    <form class="row g-3" method="POST">
      <div class="col-md-6">
        <label for="title" class="form-label">Title</label>
        <input type="title" class="form-control" name="title" id="title">
      </div>
      <div class="col-md-6">
        <label for="warranty" class="form-label">Warranty</label>
        <input type="text" class="form-control" name="warranty" id="warranty">
      </div>
      <div class="col-md-4">
        <label for="category" class="form-label">Category</label>
        <select id="category" name="category" class="form-select">
          <option selected>Choose...</option>
          <% if(categories.length>0){ %> 
            <% categories.forEach(item => { %> 
              <option><%= item.categoryName %> </option>
            <% }) %> 
          <% } %> 
        </select>
      </div>
      <div class="col-md-12">
        <h2>Skus</h2>
      </div>
      <div class="col-md-4">
        <label class="form-label" for="color">Color</label>
        <input type="text" name="color" id="color" class="form-control">
      </div>
      <div class="col-md-4">
        <label class="form-label" for="price">Price</label>
        <input type="number" name="price" id="price" class="form-control">
      </div>
      <div class="col-md-4">
        <label class="form-label" for="stock">Total Stock</label>
        <input type="number" name="stock" id="stock" class="form-control">
      </div>
      <div class="col-md-12">
        <label class="form-label" for="highlights">Highlights</label>
        <textarea type="text" name="highlights" id="highlights" class="form-control"></textarea>
      </div>
      <div class="col-md-12">
        <label class="form-label" for="dimension">Dimension</label>
        <textarea type="text" name="dimension" id="dimension" class="form-control"></textarea>
      </div>
      <div class="input-group mb-3">
        <input type="file" class="form-control" id="inputGroupFile02">
        <label class="input-group-text" for="inputGroupFile02">Upload</label>
      </div>
      <div class="row">
        <div class="col-3">
          <button type="submit" class="btn btn-primary" formaction="/products/new">Submit</button>
        </div>
        <div class="col-3">
          <button type="submit" class="btn btn-primary" formaction="/products/new/skus">Add More Skus</button>
        </div>
      </div>
    </form>
  </section>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
  <script src="/script/navbarScroll.js"></script> 
  <script src="/script/addsku.js"></script>
</body>
</html>