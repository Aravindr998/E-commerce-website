<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %> 
<body class="mt-5">
  <%- include('../partials/admin/admin-navbar') %> 
  <section class="container pt-5">
    <div class="row">
      <div>
        <a href="admin/products/new" class="btn btn-success mb-3">Add Products</a>
      </div>
      <div class="col-12">
        <table class="table">
          <thead>
            <tr>
              <th class="text-center" scope="col">#</th>
              <th class="text-center" scope="col">Title</th>
              <th class="text-center" scope="col">Price</th>
              <th class="text-center" scope="col">Category</th>
              <th class="text-center" scope="col">Image</th>
              <th class="text-center" scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <% if(product.length>0){ %> 
              <% var count = 1 %> 
              <% product.forEach(item => { %> 
                <% item.skus.forEach(sku => { %> 
                  <tr>
                    <th class="text-center align-middle" scope="row"><%= count++ %> </th>
                    <td class="text-center align-middle"><%= item.title %> </td>
                    <td class="text-center align-middle"><%= sku.price %> </td>
                    <td class="text-center align-middle"><%= item.categoryId %> </td>
                    <td class="text-center align-middle"><img class="image-table" src="/<%= sku.images[0] %> " alt=""></td>
                    <td class="text-center align-middle"><a href="/admin/products/view/<%= item._id %> " class="btn btn-primary">View Details</a></td>
                    <td class="text-center align-middle"><a href="/admin/products/delete/<%= item._id %> " class="btn btn-danger">Delete</a></td>
                  </tr>
                <% }) %> 
              <% }) %> 
            <% } %> 
          </tbody>
        </table>
      </div>
    </div>
  </section>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
  <script src="/script/navbarScroll.js"></script> 
</body>
</html>