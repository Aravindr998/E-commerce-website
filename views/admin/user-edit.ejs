<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %> 
<body class="pt-5">
  <%- include('../partials/admin/admin-navbar') %> 
  <section class="container p-4">
      <div class="row">
        <div class="col-md-6">
          <label for="title" class="form-label">Title:</label>
          <h3><%= product.title %></h3>
        </div>
        <div class="col-md-6">
          <label for="warranty" class="form-label">Warranty:</label>
          <p><%= product.warranty %></p>
        </div>
        <div class="col-md-3 my-4">
          <label for="category" class="form-label">Category:</label>
          <h5><%= product.categoryId %> </h5>
        </div>
        <div class="row">
          <div class="col-md-2 m-2">
            <a href="/admin/products/edit/<%= product.id %>" class="btn btn-primary w-100">Edit</a>
          </div>
          <div class="col-md-2 m-2">
            <a href="/admin/products/edit/<%= product.id %>" class="btn btn-danger w-100">Delete</a>
          </div>
        </div>
        <hr>
        <% let count = 0 %>
        <% product.skus.forEach(item => { %>  
          <div class="col-md-12 mt-5">
            <h2>Sku <%= ++count %> </h2>
          </div>
          <div class="col-md-4">
            <label class="form-label" for="color">Color:</label>
            <p><%= item.color %></p>
          </div>
          <div class="col-md-4">
            <label class="form-label" for="price">Price:</label>
            <p><%= item.price %></p>
          </div>
          <div class="col-md-4">
            <label class="form-label" for="stock">Total Stock:</label>
            <p><%= item.totalStock %></p>
          </div>
          <div class="col-md-12">
            <label class="form-label" for="highlights">Highlights:</label>
            <p><%= item.highlights %></p>
          </div>
          <div class="col-md-12">
            <label class="form-label" for="dimension">Dimension:</label>
            <%= item.dimension %>
          </div>
          <p>Images:</p>
          <div class="col-md-2 p-lg-5 p-sm-1 p-5">
            <img class="w-100" src="/<%= item.images[0] %> " alt="">
          </div>
          <div class="col-md-2 p-lg-5 p-sm-1 p-5">
            <img class="w-100" src="/<%= item.images[1] %> " alt="">
          </div>
          <div class="col-md-2 p-lg-5 p-sm-1 p-5">
            <img class="w-100" src="/<%= item.images[2] %> " alt="">
          </div>
          <div class="row">
            <div class="col-md-3 m-2">
              <a href="/admin/products/edit/<%= product.id %>/<%= item.id %>" class="btn btn-primary w-100">Edit</a>
            </div>
            <div class="col-md-3 m-2">
              <a href="/admin/products/edit/<%= product.id %><%= item.id %>" class="btn btn-danger w-100">Delete</a>
            </div>
          </div>
        <% }) %> 
        <div class="m-2">
          <a href="/admin" class="btn btn-outline-primary w-100">Back to home</a>
        </div>
      </div>
  </section>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
  <script src="/script/navbarScroll.js"></script> 
  <script src="/script/addsku.js"></script>
</body>
</html>