<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %> 
<body class="pt-5">
  <%- include('../partials/admin/admin-navbar') %> 
  <section class="container p-4">
    <p id="error" class="text-danger"></p>
    <form class="row g-3" id="form" enctype="multipart/form-data">
      <div class="col-md-4">
        <label class="form-label" for="color">Color</label>
        <input type="text" name="color" id="color" class="form-control" value="<%= skus.color %>">
      </div>
      <div class="col-md-4">
        <label class="form-label" for="price">Price</label>
        <input type="number" name="price" id="price" class="form-control" value="<%= skus.price %>">
      </div>
      <div class="col-md-4">
        <label class="form-label" for="stock">Total Stock</label>
        <input type="number" name="stock" id="stock" class="form-control" value="<%= skus.totalStock %>">
      </div>
      <div class="col-md-12">
        <label class="form-label" for="highlights">Highlights</label>
        <textarea type="text" name="highlights" id="highlights" class="form-control"><%= skus.highlights%> </textarea>
      </div>
      <div class="col-md-12">
        <label class="form-label" for="dimension">Dimension</label>
        <textarea type="text" name="dimension" id="dimension" class="form-control"><%= skus.dimension%></textarea>
      </div>
      <div class="row">
        <div class="col-sm-2">
          <img class="item-image p-md-2 p-sm-3 p-5" id="img1" src="/<%= skus.images[0] %> " alt="">
        </div>
        <div class="col-sm-2">
          <img class="item-image p-md-2 p-sm-3 p-5" id="img2" src="/<%= skus.images[1] %> " alt="">
        </div>
        <div class="col-sm-2">
          <img class="item-image p-md-2 p-sm-3 p-5" id="img3" src="/<%= skus.images[2] %> " alt="">
        </div>
      </div>
      <div class="input-group mb-3 col-md-4">
        <input type="file" class="form-control" id="image1" name="image1" data-id="img1" onchange="viewImage(event, this.id)">
        <label class="input-group-text" for="image1">Upload</label>
      </div>
      <div class="input-group mb-3 col-md-4">
        <input type="file" class="form-control" id="image2" data-id="img2" name="image2" onchange="viewImage(event, this.id)">
        <label class="input-group-text" for="image2">Upload</label>
      </div>
      <div class="input-group mb-3 col-md-4">
        <input type="file" class="form-control" id="image3" data-id="img3" name="image3" onchange="viewImage(event, this.id)">
        <label class="input-group-text" for="image3">Upload</label>
      </div>
      <div class="row">
        <div class="col-3">
          <button id="update-button" class="btn btn-primary" data-url="<%= skus._id %> " onclick="updateSku(this.id)">Submit</button>
        </div>
        <div class="col-3">
          <a href="/admin" class="btn btn-outline-primary">Cancel</a>
        </div>
      </div>
    </form>
  </section>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
  <script src="/script/navbarScroll.js"></script> 
  <script src="/script/updateAndDeleteSku.js"></script>
  <script src="/script/changeImage.js"></script>
</body>
</html>