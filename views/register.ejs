<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %> 
<body class="pt-5">
  <%- include('./partials/user-login-navbar') %> 
  <div class="container h-100">
    <div class="row h-100 d-flex justify-content-center align-items-center">
      <div class="col-md-5">
        <div class="login-card p-5 mb-4">
          <div class="text-center text-white">
            <h1 class="sign-in">Sign Up</h5>
          </div>
          <form action="/register" method="POST">
            <div class="row">
              <div class="mt-3 col-sm-6">
                <label class="col-12 login-label" for="fname">First Name</label>
                <input class="col-12 login-input" type="text" name="fname" id="fname">
              </div>
              <div class="mt-3 col-sm-6">
                <label class="col-12 login-label" for="lname">Last Name</label>
                <input class="col-12 login-input" type="text" name="lname" id="lname">
              </div>
            </div>
            <div class="my-3">
              <label class="col-12 login-label" for="email">Email Address</label>
              <input class="col-12 login-input" type="email" name="email" id="email">
            </div>
            <div class="my-3">
              <label class="col-12 login-label" for="phone">Phone Number</label>
              <input class="col-12 login-input" type="text" name="phone" id="phone">
            </div>
            <div class="my-3">
              <label class="col-12 login-label" for="password">Password</label>
              <input class="col-12 login-input" type="password" name="password" id="password">
            </div>
            <div class="my-3">
              <label class="col-12 login-label" for="confirm-password">Confirm Password</label>
              <input class="col-12 login-input" type="password" name="confirm-password" id="confirm-password">
            </div>
            <div class="d-flex justify-content-center m-4 pt-2">
              <button class="main-button" type="submit">Sign Up</button>
            </div>
            <div class="mt-4 mb-2 text-center pt-3">
              <a href="/login">Already have an account? Sign In</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</body>
</html>