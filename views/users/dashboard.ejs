<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %> 
<body class="pt-5">
<%- include('../partials/user-navbar') %> 
<section class="container min-vh-100 pt-5">
  <div class="row">
    <h1>Dashboard</h1>
    <div class="col-12 d-flex justify-content-end">
      <a class="main-button text-decoration-none" href="/dashboard/edit">Edit Details</a>
    </div>
    <div class="row d-flex">
      <div class="col-md-4">
        <div class="card p-3 my-4">
          <div class="d-flex justify-content-between">
            <p>Name: </p>
            <p><%= user.fname + " " + user.lname %> </p>
          </div>
          <div class="d-flex justify-content-between">
            <p>Email: </p>
            <p><%= user.email %> </p>
          </div>
          <div class="d-flex justify-content-between">
            <p>Phone: </p>
            <p><%= user.phone %> </p>
          </div>
        </div> 
      </div>
      <div class="col-md-4 my-4">
        <a href="/orders" class="text-decoration-none">
          <div class="card h-100 d-flex align-items-center justify-content-center">
            <h3>Orders</h3>
          </div>
        </a>
      </div>
      <div class="col-md-4 my-4">
        <a href="/wishlist" class="text-decoration-none">
          <div class="card h-100 d-flex align-items-center justify-content-center">
            <h3>Wishlist</h3>
          </div>
        </a>
      </div>
    </div>
    <% if(user.shippingAddress.length>0){ %> 
      <div class="row">
      <% user.shippingAddress.forEach(item => { %> 
      <div class="card d-flex flex-row justify-content-between p-5 col-md-6">
        <p>Address: </p>
        <div class="text-end">
          <p>State</p>
          <p>Street1</p>
          <p>Street2</p>
          <p>city</p>
          <p>zip</p>
        </div>
      </div>
      <% }) %> 
    </div>
    <% }else{ %>
      <p>No address added</p>
      <% } %>  
  </div>
</section>
<%- include('../partials/footer') %> 
<script src="/script/userScript.js"></script>
</body>
</html>
