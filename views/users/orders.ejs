<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %> 
<body class="pt-5">
<%- include('../partials/user-navbar') %> 
<section class="container min-vh-100 pt-5">
  <div class="row">
    <% orders.forEach(order => { %> 
      <% order.items.forEach(item => { %> 
    <div class="col-12 my-2">
      <a href="/orders/<%= order._id %> " class="text-decoration-none">
        <div class="card row d-flex flex-row p-3">
          <div class="col-lg-3 d-flex justify-content-center">
            <img class="checkout-images" src="/<%= item.image %> " alt="">
          </div>
          <div class="col-lg-3">
            <div>
              <p class="fw-bold"><%= item.productName %></p>
            </div>
            <div>
              <p><%= item.color %></p>
            </div>
            <div>
              <p class="text-muted fw-light">Order id: <%= order._id %> </p>
            </div>
          </div>
          <div class="col-lg-3">
            <div>
              <p class="fw-bold">â‚¹<%= Math.round(item.price * 1.18) %></p>
            </div>
            <div>
              <p class="">Quantity: <%= item.quantity %> </p>
            </div>
          </div>
          <div class="col-lg-3">
            <% if(item.isCancelled){ %>
              <div>
                <p class="text-danger"><strong>Order Status: </strong>Cancelled</p>
              </div>
            <% }else if(item.orderStatus == 'Delivered'){ %> 
              <div>
                <p class="text-success"><strong>Order Status: </strong>Delivered</p>
              </div>
            <% }else{ %>
              <div>
                <p><strong>Order Status: </strong><%= item.orderStatus %> </p>
              </div>
              <div>
                <p>Payment Status: <%= order.paymentMethod == 'COD'? order.paymentMethod : (order.PaymentVerified? 'Completed' : 'Pending') %>  </p>
              </div>
            <% } %>   
          </div>
        </div>
      </a>
    </div>
    <% }) %> 
    <% }) %> 
  </div>
</section>
<%- include('../partials/footer') %> 
<script src="/script/userScript.js"></script>
</body>
</html>
